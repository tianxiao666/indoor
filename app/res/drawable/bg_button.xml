<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <stroke android:width="1dp" android:color="#FF8900" />

            <corners android:radius="8dp" />

            <gradient android:angle="90" android:centerColor="#7eb8eb" android:endColor="#2282D9" android:startColor="#2282D9" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <stroke android:width="1dp" android:color="#2282D9" />

            <gradient android:angle="90" android:centerColor="#2282D9" android:endColor="#7eb8eb" android:startColor="#7eb8eb" />

            <corners android:radius="8dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>