<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/about_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moretop"
            android:gravity="left|center_vertical"
            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:text="关于"
            android:textSize="20sp" />

        <Button
            android:id="@+id/LayerSelection_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:text="图层选择"
            android:textSize="20sp" />

        <Button
            android:id="@+id/WifiSignalTestMenu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:text="Wifi信号测试"
            android:textSize="20sp" />

        <Button
            android:id="@+id/StepTestMenu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:text="步数测试"
            android:textSize="20sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_morebottom"
            android:gravity="left|center_vertical"
            android:paddingBottom="20sp"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:text="退出"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:background="@drawable/icon_setting" />

        <Button
            android:id="@+id/exit1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:background="@drawable/icon_exit" />
    </LinearLayout>

</LinearLayout>