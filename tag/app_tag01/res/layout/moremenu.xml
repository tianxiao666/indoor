<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/about_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moretop"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="关于" />

        <Button
            android:id="@+id/update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="版本更新" />

        <Button
            android:id="@+id/LayerSelection_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="图层选择" />

        <Button
            android:id="@+id/SignalTestMenu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_morebottom"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="信号测试菜单" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/submenu_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moretop"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="平面图" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="电梯" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="消防层" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_moremiddle"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="洗手间" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_morebottom"
            android:gravity="left|center_vertical"
            android:paddingLeft="20sp"
            android:text="商家" />
    </LinearLayout>

</LinearLayout>