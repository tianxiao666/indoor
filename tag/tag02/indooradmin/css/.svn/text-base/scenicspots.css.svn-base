/*导入公共样式*/
@import url("public.css");
/*导入页头样式*/
@import url("header.css");
/*导入翻页样式*/
@import url("page_break.css");

.tabox{ min-width:980px;  padding:10px 0 5px; }
.tabox .tablist{ float:left; }
.tabox .tablist span{float:left; padding:0 0 0 12px; display:inline-block;  background:url(../images/poi/bg_btn1.jpg) 0 0 no-repeat; height:25px; margin-right:10px;}
.tabox .tablist span a{ display:inline-block; height:19px; background:url(../images/poi/bg_btn1.jpg) right -25px no-repeat; padding-right:12px; padding-top:6px; }
.tabox .tablist span.on{background:url(../images/poi/bg_btn2.jpg) 0 0 no-repeat; height:29px;}
.tabox .tablist span.on a{background:url(../images/poi/bg_btn2.jpg) right -29px no-repeat; height:23px; }
.tabox .tabtip{ float:right;  }
.tabox .tabtip span{ float:left; margin-right:10px; background:url(../images/poi/bg_btn4.jpg) 0 0 no-repeat; height:29px; padding-left:12px;}
.tabox .tabtip span a{ display:inline-block; padding-top:8px; height:21px; background:url(../images/poi/bg_btn4.jpg) right -29px no-repeat; padding-right:12px; color:#F8F7FC;}
.tabox .tabtip span.on{background:url(../images/poi/bg_btn3.jpg) 0 0 no-repeat; height:29px; padding-left:12px; }
.tabox .tabtip span.on a{ display:inline-block; padding-top:8px; height:21px; background:url(../images/poi/bg_btn3.jpg) right -29px no-repeat; padding-right:12px; color:#F8F7FC;}
.tabox .tabtip span a:hover{ text-decoration:none; }

.tabtext{ min-width:978px; border:1px #cecece solid; -moz-border-radius:5px; -webkit-border-radius:5px; background:#fff; }
.con_left{ float:left; width:100%; }
.cl_tit{ float:left; background:url(../images/poi/icon_jt1.jpg) 0 center no-repeat; color:#089E61; font-weight:bold; line-height:35px; position:relative; width:100%; }
.cl_tit strong{ padding-left:18px; font-weight:bold;}
.cl_tit2{ float:left; background:url(../images/poi/icon_jt1.jpg) 0 center no-repeat; color:#089E61; font-weight:bold; line-height:35px; position:relative; width:auto; margin-right:5px; display:inline;  }
.cl_tit3{ float:left; color:#089E61; font-weight:bold; line-height:35px; position:relative; width:auto; display:inline;  }
.cl_tit strong{ padding-left:18px; font-weight:bold; margin-right:5px;}
.cl_tit2 strong{ padding-left:18px; display:inline-block; width:55px; font-weight:bold; margin-right:5px;}
.cl_tit3 strong{ padding-left:5px; display:inline-block; width:auto; font-weight:bold; margin-right:5px;}
.cl_tit span{ position:absolute; right:20px; top:5px; font-weight:normal; }
.areatxt{ float:left; border:1px #ccc solid; width:85%; height:100px; }
.piclist{ float:left; width:100%; }
.piclist li{float:left; padding:5px 25px 5px 5px; margin:0;}
.piclist li span{display:block; border:1px #ccc solid; background:#e5e5e5; width:125px; height:125px; overflow:hidden;}
.piclist li span a{ display:table-cell; width:125px; height:125px; text-align:center; vertical-align:middle; *font-size:109px; *display:block; }
.piclist li span a img{ vertical-align:middle;}



.con_right{ float:right; width:385px; padding:10px;}
.con_right .rpic{ float:left; width:375px; height:375px; overflow:hidden; border:5px #000 solid; }
.poilist{ float:left; width:385px; }
.poilist ul{ float:left; width:385px;}
.poilist ul li{ float:left; padding:5px 10px 5px 0;  white-space:nowrap;}
.poilist ul li a{color:#666; }
.poilist ul li a:hover{ color:#089E61;}
