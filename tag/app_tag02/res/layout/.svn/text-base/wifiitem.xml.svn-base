<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b0b0b0"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:background="@drawable/bg_id"
        android:text="1"
        android:textColor="@color/black"
        android:textStyle="bold|italic" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/bg_messageitem"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="信息类型："
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="wifi信息"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>

        <include layout="@layout/dashline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="SSID："
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/SSID_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>

        <include layout="@layout/dashline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="BSSID："
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/BSSID_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>

        <include layout="@layout/dashline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="信号强度："
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/signal_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>

        <include layout="@layout/dashline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="MAC地址："
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/MAC_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>

        <include layout="@layout/dashline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="频率："
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/frequency_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>

        <include layout="@layout/dashline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="信道："
                android:textColor="@color/black" >
            </TextView>

            <TextView
                android:id="@+id/channel_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>